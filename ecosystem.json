{
    "apps" : [{
        "name"        : "Web Server",
        "script"      : "server.js",
        "env": {
            "NODE_ENV": "production"
        }
    }],
	"deploy" : {
		"production" : {
			"user" : "pi",
			"host" : "sean-hill.ddns.net",
			"port" : "8080",
			"ref"  : "origin/master",
			"repo" : "https://github.com/sean-hill/raspberry-pi-web-server.git",
			"path" : "/var/www/web-server",
			"post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production"
		}
	}
}